generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String        @id @default(uuid())
  email        String        @unique
  password     String
  sessions     Session[]
  workouts     Workout[]
  measurements Measurement[]
  meals        Meal[]
}

model Session {
  id        String   @id @default(uuid())
  token     String   @unique
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  expiresAt DateTime
}

model Workout {
  id        String   @id @default(uuid())
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  date      DateTime
  exercises Json
}

model Measurement {
  id         String   @id @default(uuid())
  user       User     @relation(fields: [userId], references: [id])
  userId     String
  date       DateTime
  waist      Float?
  hips       Float?
  thigh      Float?
  arm        Float?
  chest      Float?
  underNavel Float?
  weight     Float?
}

model Meal {
  id     String   @id @default(uuid())
  user   User     @relation(fields: [userId], references: [id])
  userId String
  date   DateTime
  items  Json
}
